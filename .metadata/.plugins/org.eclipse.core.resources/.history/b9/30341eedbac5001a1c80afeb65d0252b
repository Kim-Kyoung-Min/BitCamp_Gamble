class ChoiceMenu {

	public String userChoice() {
		Scanner sc = new Scanner(System.in);
		String userChoice = sc.nextLine();
		return userChoice;
	}

}

class Start {
	// ì¶œë°œ ì¤„ìˆ˜ ? •?•˜ê¸? 1 == ì¢? , 2== ?š°
	public int startNum;
	// ?œ?¤?œ¼ë¡? 1~10ê¹Œì? ì§?? •
	private int randomStart;

	// ?œ?¤?œ¼ë¡? 1~10ê¹Œì? ?ˆ«?ë¥? ë§Œë“¤?–´ 5?´?•˜ë©? 1(ì¢Œì¶œë°?), 6?´?ƒ?´ë©? 2(?š°ì¶œë°œ)
	public void play() throws InterruptedException {
		randomStart = (int) (Math.random() * 10) + 1;
		if (randomStart <= 5) {
			startNum = 1;
			System.out.println();
			Thread.sleep(1000);
			System.out.println("????????ì¢Œì¶œë°?");
		} else if (randomStart >= 6) {
			startNum = 2;
			System.out.println();
			Thread.sleep(1000);
			System.out.println("??????????  ??	??   ?š°ì¶œë°œ");
		}
	}

	// Line class?— ?„˜ê²¨ì£¼ê¸°ìœ„?•´ ë§Œë“¬
	public int randomStartNum() {
		return startNum;
	}
}

