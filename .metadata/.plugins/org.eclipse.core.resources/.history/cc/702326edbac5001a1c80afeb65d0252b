import java.util.Scanner;
 
class blackjackGame {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        
        boolean uCardSetFull = false;        // '?œ ??'?˜ ì¹´ë“œset?´ ë¹„ì–´?ˆ?Š” ?ƒ?ƒœë¡? ì´ˆê¸°?™”
        boolean dCardSetFull = false;        // '?”œ?Ÿ¬'?˜ ì¹´ë“œset?´ ë¹„ì–´?ˆ?Š” ?ƒ?ƒœë¡? ì´ˆê¸°?™”
        boolean gameWin = true;              // ê²Œì„ ê²°ê³¼ ?Œ?‹¨. ?Š¹ë¦¬ë¡œ ì´ˆê¸°?™”
        int comCardSet[] = new int[52];      // ë¬´ì‘?œ„ë¡? ê²°ì •?œ ?ˆ«?ë¥? ???¥
 
        comCardSetInit(comCardSet);          // ê³µìš© ì¹´ë“œset ?ƒ?„± ë°? ì´ˆê¸°?™” 
        
        // ?…Œ?Š¤?Š¸: ?ƒ?„±?œ ê³µìš© ì¹´ë“œset ?™•?¸
/*      System.out.print("ê³µìš© ì¹´ë“œset");
        comCardSetPrint(comCardSet);
*/
        // ?”Œ? ˆ?´?–´, ?”œ?Ÿ¬ ë¸”ë™?­ ?Œ?‹¨?„ ?œ„?•œ ???¥ ê³µê°„
        boolean uBlackjack[] = new boolean[2];        // ?œ ???˜ ì¹´ë“œset?´ ë¸”ë™?­ ?ƒ?ƒœ?¸ì§? ?Œ?‹¨?•˜?Š” ê³µê°„
        boolean dBlackjack[] = new boolean[2];        // ?”œ?Ÿ¬?˜ ì¹´ë“œset?´ ë¸”ë™?­ ?ƒ?ƒœ?¸ì§? ?Œ?‹¨?•˜?Š” ê³µê°„
        boolean uBlackjackWin = false;                // ?œ ???˜ ë¸”ë™?­ ?Š¹ë¦? ?ƒ?ƒœ ì´ˆê¸°?™”
        boolean dBlackjackWin = false;                // ?”œ?Ÿ¬?˜ ë¸”ë™?­ ?Š¹ë¦? ?ƒ?ƒœ ì´ˆê¸°?™”
        
        // ì¹´ë“œ ê¸°ë³¸ ?…‹?Œ…: ?œ ?? 2?¥, ?”œ?Ÿ¬ 2?¥ ë°°ë¶„
        String uCardSet[] = new String[6];            // ?œ ???˜ ì¹´ë“œset ì¤?ë¹?
        String dCardSet[] = new String[3];            // ?”œ?Ÿ¬?˜ ì¹´ë“œset ì¤?ë¹?
        cardSetInit(uCardSet, dCardSet);              // ?œ ??ê³? ?”œ?Ÿ¬?˜ ì¹´ë“œset ?ƒ?„±
        basicCardSetInit(comCardSet, uCardSet, uBlackjack);        // ?œ ???˜ ê¸°ë³¸ ì¹´ë“œ 2?¥ ë°°ë¶„
        basicCardSetInit(comCardSet, dCardSet, dBlackjack);        // ?”œ?Ÿ¬?˜ ê¸°ë³¸ ì¹´ë“œ 2?¥ ë°°ë¶„
        
        // ê²Œì„ ì§„í–‰ ë£¨í”„
        gameLoop(comCardSet, uCardSet, dCardSet, uCardSetFull, dCardSetFull,
                uBlackjack, dBlackjack, uBlackjackWin, dBlackjackWin, gameWin, scan);
 
        // ê²°ê³¼ ì¶œë ¥
        gameResult(uCardSet, dCardSet, uBlackjackWin, dBlackjackWin, gameWin);
 
        scan.close();
    }
 
